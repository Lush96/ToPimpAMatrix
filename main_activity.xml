<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_title"
        android:text="@string/row"
        android:layout_below="@+id/main_title"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"/>

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/row_spinner"
        android:layout_below="@+id/row_title"
        android:layout_centerHorizontal="true"
        android:prompt="@string/row"
        android:dropDownWidth="60dp">

    </android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/column_title"
        android:text="@string/column"
        android:layout_below="@+id/row_spinner"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"/>

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/column_spinner"
        android:layout_below="@+id/column_title"
        android:layout_alignStart="@+id/row_spinner"
        android:dropDownWidth="60dp"
        android:prompt="@string/column"
        >

    </android.support.v7.widget.AppCompatSpinner>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_detailActivity_button"
        android:layout_alignParentBottom="true"
        android:text="Create Matrix"
        android:textColor="@android:color/black"
        android:clickable="true"
        />
    <!--<EditText-->
    <!--android:id="@+id/edit_row_number"-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="30dp" />-->

</RelativeLayout>